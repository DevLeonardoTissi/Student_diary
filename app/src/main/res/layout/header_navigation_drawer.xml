<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true">


<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="@dimen/default_margin_itens_header_drawer"
android:layout_marginStart="@dimen/default_margin_itens_header_drawer"
android:layout_marginEnd="@dimen/default_margin_itens_header_drawer"
android:textSize="@dimen/bigTextSize"
android:textColor="?attr/colorOnSurface"
android:text="@string/app_name" />

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/default_margin_itens_header_drawer"
android:layout_marginStart="@dimen/default_margin_itens_header_drawer"
android:layout_marginEnd="@dimen/default_margin_itens_header_drawer"
android:textSize="@dimen/defaultTextSize"
android:textColor="?attr/colorOnSurfaceVariant"
android:text="@string/header_drawer_subtitle" />

    </LinearLayout>