<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/header_container">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_items_header_drawer"
        android:layout_marginTop="@dimen/default_margin_items_header_drawer"
        android:layout_marginEnd="@dimen/default_margin_items_header_drawer"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/bigTextSize" />

    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_items_header_drawer"
        android:layout_marginEnd="@dimen/default_margin_items_header_drawer"
        android:layout_marginBottom="@dimen/default_margin_items_header_drawer"
        android:text="@string/header_drawer_subtitle"
        android:textSize="@dimen/defaultTextSize"

        android:textColor="@color/customRed"/>

</LinearLayout>