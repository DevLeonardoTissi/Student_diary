<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.disciplinesFragment.DisciplinesFragment">


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/disciplinesFragment_buttonToggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        app:checkedButton="@id/disciplinesFragment_toggle_button_all"
        app:layout_constraintBottom_toTopOf="@id/disciplinesFragment_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_all"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_list" />

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_favorites"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_favorite_filled" />

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_completed"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_check_list"/>

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_date"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_calendar"/>

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_growing"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_growing"/>

        <Button
            android:id="@+id/disciplinesFragment_toggle_button_descending"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_descending"/>


    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/disciplinesFragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplinesFragment_buttonToggleGroup"
        tools:listitem="@layout/discipline_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/disciplinesFragment_fab_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin_default"
        android:contentDescription="@string/disciplines_fragment_fab_insert_content_desc"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/disciplinesFragment_imageView_student"
        style="@style/imageViewStudent"
        android:contentDescription="@string/disciplines_fragment_img_content_student"
        android:src="@drawable/student"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toBottomOf="@id/disciplinesFragment_buttonToggleGroup" />

    <TextView
        android:id="@+id/disciplinesFragment_textView_student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:gravity="center"
        android:text="@string/disciplines_fragment_messageStudent"
        android:textSize="@dimen/bigTextSize"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplinesFragment_imageView_student" />


</androidx.constraintlayout.widget.ConstraintLayout>