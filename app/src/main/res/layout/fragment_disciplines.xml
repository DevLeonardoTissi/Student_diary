    <com.google.android.material.button.MaterialButtonToggleGroup
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/disciplinesFragment_buttonToggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/disciplinesFragment_toggle_button_all">

        <Button
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:id="@+id/disciplinesFragment_toggle_button_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_list"
            />
        <Button
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:id="@+id/disciplinesFragment_toggle_button_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_favorite_outlined"
            />

        <Button
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:id="@+id/disciplinesFragment_toggle_button_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_check_list"

            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/disciplinesFragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplinesFragment_buttonToggleGroup"
        tools:listitem="@layout/discipline_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/disciplinesFragment_fab_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin_default"
        android:contentDescription="@string/disciplines_fragment_fab_insert_content_desc"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/disciplinesFragment_imageView_student"
        style="@style/imageViewStudent"
        android:contentDescription="@string/disciplines_fragment_img_content_student"
        android:src="@drawable/student"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/disciplinesFragment_textView_student"
        style="@style/textviewColorSecondary"
        android:layout_marginTop="@dimen/marginTop_textView_student"
        android:gravity="center"
        android:text="@string/disciplines_fragment_messageStudent"
        android:textSize="@dimen/bigTextSize"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disciplinesFragment_imageView_student" />


</androidx.constraintlayout.widget.ConstraintLayout>